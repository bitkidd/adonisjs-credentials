{
  "name": "@bitkidd/adonis-credentials",
  "version": "2.0.0",
  "description": "Credentials manager for Adonis 6.x",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/examples",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./editor": "./build/src/editor.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "test": "cross-env NODE_DEBUG=adonisjs:env c8 npm run quick:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/env",
    "quick:test": "node --loader=ts-node/esm bin/test.ts"
  },
  "keywords": [
    "adonis",
    "credentials",
    "secrets"
  ],
  "author": "cc@bitkidd.dev",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.2.1",
    "@adonisjs/prettier-config": "^1.2.1",
    "@adonisjs/tsconfig": "^1.2.1",
    "@japa/assert": "^2.1.0",
    "@japa/expect-type": "^2.0.1",
    "@japa/file-system": "^2.2.0",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.3.106",
    "@types/node": "^20.11.6",
    "c8": "^9.1.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vinejs/vine": "^1.7.0",
    "@poppinss/utils": "^6.7.1",
    "yaml": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bitkidd/adonis-credentials.git"
  },
  "bugs": {
    "url": "https://github.com/bitkidd/adonis-credentials/issues"
  },
  "homepage": "https://github.com/bitkidd/adonis-credentials#readme",
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/editor.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
